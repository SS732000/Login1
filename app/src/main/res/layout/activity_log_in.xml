<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".LogIn">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2388D8"
        android:text="BMI Analyzer"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textAlignment="center"
        android:textColor="#2388D8"
        android:textSize="34sp"
        android:textStyle="bold"
        android:translationY="100dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you already have an account, log in"
        android:textColor="#9F9B9B"
        android:textSize="20sp"
        android:translationX="40dp"
        android:translationY="100dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Username"
        android:backgroundTint="@color/blue"
        android:textColor="#818080"
        android:textColorLink="#32B2EC"
        android:textSize="16sp"
        android:translationX="10dp"

        android:translationY="190dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:pointerIcon="none"
        android:text="Password"
        android:backgroundTint="@color/blue"
        android:textColor="#818080"
        android:textSize="16sp"
        android:translationX="10dp"
        android:translationY="200dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/eye"
        android:translationX="350dp"
        android:translationY="160dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:backgroundTint="#1588D8"
        android:text="LOG IN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationX="35dp"
        android:translationY="300dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Don't Have An Account ? "
        android:textStyle="bold"
        android:translationX="80dp"
        android:translationY="310dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#2388D8"
        android:textSize="14sp"
        android:textStyle="bold"
        android:translationX="270dp"
        android:translationY="290dp" />

</LinearLayout>